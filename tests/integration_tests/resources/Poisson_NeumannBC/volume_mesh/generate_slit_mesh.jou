#!python

len_x = 20
len_y = 20
len_z = 10
mesh_size = 0.83

cubit.cmd('reset')
cubit.cmd('set Node Constraint ON')
### create brick

cubit.cmd('brick x ' + str(len_x) + ' y ' + str(len_y) +' z ' + str(len_z))

#### create volume mesh
cubit.cmd('volume 1  size ' + str(mesh_size))
cubit.cmd('mesh volume 1')
cubit.cmd('block 1 volume 1')

### create side set
cubit.cmd('Sideset 1 surface 1')
cubit.cmd('Sideset 2 surface 2')
cubit.cmd('Sideset 3 surface 3')
cubit.cmd('Sideset 4 surface 4') 
cubit.cmd('Sideset 5 surface 5')
cubit.cmd('Sideset 6 surface 6')

### write out the Exodus file
cubit.cmd('block all element type HEX20')
cubit.cmd('set large exodus file off')
cubit.cmd('export Genesis "slit_HEX20.e" dimension 3 block all overwrite')

